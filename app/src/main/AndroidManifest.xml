<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hwqgooo.databinding">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".ui.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>

                <category
                    android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.showgirlphoto.GirlPhotoActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".ui.showgirlphoto.GirlPhotoGalleryActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".ui.showmzitu.MzituGalleryActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".ui.carton.CartonChapterActivity" />
        <activity android:name=".ui.carton.CartonGalleryActivity" />
    </application>

</manifest>